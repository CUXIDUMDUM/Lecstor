[% IF error.error_fields.size %]
  [% FOREACH errors IN error.error_fields.values %]
    [% FOREACH error IN errors %]
      [% PROCESS inc/error.tt %]
    [% END %]
  [% END %]
[% ELSIF error.fields.size %]
  [% FOREACH errors IN error.fields.values %]
    [% FOREACH error IN errors %]
      [% PROCESS inc/error.tt %]
    [% END %]
  [% END %]
[% ELSIF error.error %]
  [% PROCESS inc/error.tt error=error.error %]
[% ELSIF error.message %]
  [% PROCESS inc/error.tt error=error.message %]
[% END %]
